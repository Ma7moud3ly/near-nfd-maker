<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Near" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>

        <!-- full screen -->
        <item name="android:windowTranslucentStatus">true</item>

    </style>



    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="button.disabled">
        <item name="android:enabled">false</item>
    </style>


    <style name="button_toggle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="mMaterialButtonToggleGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="checkedButton">@id/home_email_tab</item>
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="button_toggle2" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="textInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:height">45dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="textInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>


    <style name="ripple">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="label.sub">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="label.start">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="label.bold">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label.small">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="label.title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="button_text" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="pin_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSelectHandle">@drawable/text_handle</item>
        <item name="bottomTextPaddingDp">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="distanceInBetween">15dp</item>
        <item name="highlightColor">@color/colorPrimary</item>
        <item name="cornerRadius">5dp</item>
        <item name="highlightType">currentField</item>
        <item name="isCursorEnabled">true</item>
        <item name="isCustomBackground">false</item>
        <item name="noOfFields">6</item>

    </style>


    <style name="PlayerSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">search_player</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:queryHint">well</item>
    </style>
</resources>