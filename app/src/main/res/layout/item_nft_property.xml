<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/nft_create_property_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:weightSum="2">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/textInputLayout.nft"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nft_create_property_key"
                style="@style/textInput"
                android:hint="@string/nft_create_property_key_hint"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/textInputLayout.nft"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nft_create_property_value"
                style="@style/textInput"
                android:hint="@string/nft_create_property_val_hint" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>